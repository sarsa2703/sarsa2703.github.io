mixin head(siteData)
  meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
  meta(name='mobile-web-app-capable' content='yes')
  meta(name='viewport' content='width=device-width, initial-scale=1, minimum-scale=1')
  meta(name='description' content=siteData.description)
  meta(name='author' content='Sarsa Murmu')
  meta(name='keywords' content='sarsamurmu, portfolio')
  meta(property='og:site_name' content=siteData.siteName)

  meta(property='og:type' content='portfolio')
  meta(property='og:url' content=siteData.canonical)
  meta(property='og:image' content=siteData.brandImage)
  meta(property='og:description' content=siteData.description)
  meta(property='og:site_name' content=siteData.siteName)
  meta(property='og:locale' content='en_US')
  link(rel='canonical' href=siteData.canonical)

  meta(name='twitter:card' content='summary')
  meta(name='twitter:creator' content='@sarsamurmu')
  meta(name='twitter:site' content='@sarsamurmu')
  meta(name='twitter:title' content=siteData.siteName)
  meta(name='twitter:description' content=siteData.description)
  meta(name='twitter:image:src' content=siteData.brandImage)

  meta(name='theme-color' content=siteData.themeColor)
  meta(name='msapplication-TileColor' content=siteData.themeColor)
  meta(name='msapplication-navbutton-color' content=siteData.themeColor)
  meta(name='apple-mobile-web-app-status-bar-style' content=siteData.themeColor)

  link(rel='shortcut icon' href='/resources/favicon.png')
  link(rel='apple-touch-icon' href='/resources/favicon.png')
  link(rel='apple-touch-icon' sizes='192x192' href='/resources/favicon.png')
  link(rel='apple-touch-icon-precomposed' href='/resources/favicon.png')
  meta(name='msapplication-TileImage' content='/resources/favicon.png')
  link(rel='icon' href='/resources/favicon.png' sizes='192x192' type='image/png')
